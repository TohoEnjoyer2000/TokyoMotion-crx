{
    "name": "TokyoMotion Downloader",
    "description": "Fetch videos and photos from tokyomotion HD quality when available",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.tokyomotion.net/video/*",
                "https://www.osakamotion.net/video/*"
            ],
            "js": [
                "background/index.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/1.png",
        "48": "icons/2.png",
        "128": "icons/3.png"
    }
}